#!/usr/bin/env bash

# Update package lists and install Nginx
sudo apt-get update -y -qq
sudo apt-get install -y nginx

# Create HTML file with "Hello World!"
echo "Hello World!" | sudo tee /var/www/html/index.html > /dev/null

# Define string for replacement
string_for_replacement="server_name _;\n\trewrite ^\/redirect_me https:\/\/github.com\/besthor permanent;"

# Replace default server configuration in Nginx configuration
sudo sed -i "s/server_name _;/$string_for_replacement/" /etc/nginx/sites-enabled/default

# Restart Nginx service
sudo service nginx restart
